<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MakeAccount">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="414dp"
        android:layout_height="184dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="317dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="B O T I C S"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="46dp"
                android:text="THE ALL-AROUND FITNESS AND NUTRITION APP" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutConnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintBottom_toTopOf="@+id/LayoutCreateAccout">

        <EditText
            android:id="@+id/inputPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_input_text"
            android:textColor="@color/black"
            android:ems="10"
            android:hint="pseudo"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#AFAFAF" />

        <EditText
            android:id="@+id/inputMdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_input_text"
            android:textColor="@color/black"
            android:padding="10dp"
            android:ems="10"
            android:hint="mot de passe"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#AFAFAF" />

        <Button
            android:id="@+id/buttonConnexion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#fc5c01"
            android:text="Connexion" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutCreateAccout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/with_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fc5c01"
            android:text="Continuer avec ce téléphone" />

        <Button
            android:id="@+id/with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4286f5"
            android:text="Continuer avec Google" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>